{
  "compilerOptions": {
    "sourceMap": false,
    "module": "commonjs",
    "noImplicitAny": true,
    // "removeComments": true,
    "lib": [
      "dom",
      "es2015",
      "esnext",
    ],
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      // ~/ 指向 server/types，types 目录下都是 types 文件，所以不会编译产出
      "~/*": [
        "./types/*"
      ]
    },
    // "target": "es2015",
    "target": "es5",
    "outDir": "dist",
    // "declaration": true,
  },
  "include": [
    "src/**/*"
  ],
}